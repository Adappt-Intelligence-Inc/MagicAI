OUT_FILE_NAME = zbar

CFLAGS=  -g -Wall -c -DZBAR_WIN=0 -DNDEBUG

TARGETS=$(OUT_FILE_NAME) $(TARGET)

INC = -I../../qrcode/zbar -I../../qrcode/decoder  -I../../qrcode/processor  -I../../qrcode/qrcode  -I../../qrcode/video  -I../../qrcode/window -I../../qrcode/include  -I../../qrcode/  -I/usr/include/ImageMagick-6 -I/usr/include/x86_64-linux-gnu/ImageMagick-6    

